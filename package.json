    "@open-wc/dedupe-mixin": "^1.3.0",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "monaco-editor": "^0.29.1",
    "prismjs": "^1.25.0"
  },
  "peerDependencies": {
    "jsrsasign": "^10.4.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^5.0.2",
    "@advanced-rest-client/arc-mock": "^5.0.0",
